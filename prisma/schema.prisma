// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 게시글 모델
model Post {
  id        String   @id @default(cuid())
  title     String
  content   String
  slug      String   @unique
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 성능 최적화를 위한 인덱스 추가
  @@index([published, createdAt(sort: Desc)]) // 발행된 포스트 조회 최적화
  @@index([published]) // published 필드 인덱스
  @@index([createdAt(sort: Desc)]) // 최신 포스트 조회 최적화
  @@map("posts")
}

// 관리자 인증 모델
model Admin {
  id        String   @id @default(cuid())
  password  String
  createdAt DateTime @default(now())

  @@map("admins")
}

// 파일 업로드 모델
model FileUpload {
  id           String   @id @default(cuid())
  filename     String
  originalName String
  fileType     String // 'resume' | 'portfolio'
  fileSize     Int // 파일 크기 (bytes)
  fileUrl      String // 업로드된 파일 URL
  uploadedBy   String // 업로드한 관리자 ID
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // 성능 최적화를 위한 인덱스 추가
  @@index([fileType, createdAt(sort: Desc)]) // 파일 타입별 최신 조회
  @@index([fileType]) // 파일 타입 인덱스
  @@map("file_uploads")
}
